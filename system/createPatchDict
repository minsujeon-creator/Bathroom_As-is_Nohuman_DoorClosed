FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

pointSync false;

patches
(
    // Vent patch from ventFaces
    {
        name        vent;
        patchInfo
        {
            type patch;
        }
        constructFrom set;
        set ventFaces;
    }

    // Door SLIT patch (NOT the solid) from doorSlitFaces
    {
        name        door;
        patchInfo
        {
            type patch;   // set your inflow/outflow/pressure BCs later in 0/* files
        }
        constructFrom set;
        set doorSlitFaces;
    }

    // Solid closed-door area remains a wall
    {
        name        doorClosed;
        patchInfo
        {
            type wall;
        }
        constructFrom set;
        set doorClosedFaces;
    }
);

